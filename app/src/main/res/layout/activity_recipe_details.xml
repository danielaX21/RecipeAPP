<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <ImageView
                android:id="@+id/recipeDetailImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/soft_pink" />

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:padding="8dp"
                android:background="@drawable/input_background"
                android:src="@drawable/ic_home"
                app:tint="@color/deep_rose" />

            <ImageView
                android:id="@+id/favButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="16dp"
                android:padding="8dp"
                android:background="@drawable/input_background"
                android:src="@android:drawable/btn_star_big_on"
                app:tint="@color/deep_rose" />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/recipeDetailTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recipe Title"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:textColor="@color/deep_rose"
                    android:textSize="24sp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingredients"
                    android:textStyle="bold"
                    android:textColor="@color/deep_rose"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/recipeDetailIngredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:lineSpacingExtra="4dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_marginBottom="24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preparation Steps"
                    android:textStyle="bold"
                    android:textColor="@color/deep_rose"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/recipeDetailDirections"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading instructions..."
                    android:lineSpacingExtra="4dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:layout_marginBottom="30dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/addToFavoritesButton"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="Add to Favorites"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_pink_rounded"
                    app:backgroundTint="@color/deep_rose" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAddToShoppingList"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="8dp"
                    android:text="Add something to Shopping List"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:background="@drawable/button_pink_rounded"
                    app:backgroundTint="@color/soft_pink" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>