<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/cream_white">

    <LinearLayout
        android:id="@+id/headerRecipes"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@drawable/header_background">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_home"
            app:tint="@color/deep_rose" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Results"
            android:textSize="22sp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/deep_rose" />

        <ImageView
            android:id="@+id/favIconHeader"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@android:drawable/btn_star_big_on"
            app:tint="@color/deep_rose" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filterBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerRecipes"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <TextView
            android:id="@+id/filterRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Rated ★"
            android:background="@drawable/button_pink_rounded"
            android:backgroundTint="@color/soft_pink"
            android:textColor="@color/deep_rose"
            android:padding="10dp"
            android:layout_margin="4dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/filterTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fastest ⏱"
            android:background="@drawable/button_pink_rounded"
            android:backgroundTint="@color/soft_pink"
            android:textColor="@color/deep_rose"
            android:padding="10dp"
            android:layout_margin="4dp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/noResultsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="No recipes found..."
        android:textColor="@color/deep_rose"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recipesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/filterBar" />

</RelativeLayout>